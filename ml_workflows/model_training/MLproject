name: ml_workflow

Can have a docker_env instead of a conda_env, e.g.
docker_env:
   image:  mlflow-project

entry_points:
  load_raw_data:
    command: "python load_raw_data.py"

  validate_data:
    parameters:
    command: "python validate_data.py"

  engineer_features:
    parameters:
    command: "python engineer_features.py"

  experiment_models:
    parameters:
    command: "python experiment_models.py"

  # pycaret_modeling:
  #   parameters:
  #   command: "python pycaret_modeling.py"

  train_final_model:
    command: "python train_final_model.py"

  # test_model:
